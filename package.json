{
  "name": "simple-parcel-starter",
  "version": "1.0.0",
  "description": "Parcel starter project",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production parcel build src/index.html --no-minify",
    "dev": "cross-env NODE_ENV=development parcel src/index.html",
    "format": "prettier --write './{src,bin,test}/**/*.{js,jsx,json,md}'",
    "lint": "prettier --list-different './{src,bin,test}/**/*.{js,jsx,json,md}'",
    "test": "npm run lint && npm run unit",
    "unit": "jest"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.1",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^21.2.1",
    "node-sass": "^4.7.2",
    "parcel-bundler": "^1.1.0",
    "prettier": "^1.9.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js"
  }
}
